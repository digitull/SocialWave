{
  "version": 1,
  "dfx": "0.15.0",
  "canisters": {
    "socialwave_frontend": {
      "type": "assets",
      "source": ["dist/"],
      "dependencies": ["content_storage"],
      "build": "npm run build"
    },
    "socialwave_backend": {
      "type": "motoko",
      "main": "src/socialwave_backend/main.mo",
      "dependencies": ["content_storage"]
    },
    "content_storage": {
      "type": "motoko",
      "main": "src/content_storage/main.mo"
    },
    "analytics": {
      "type": "motoko",
      "main": "src/analytics/main.mo",
      "dependencies": ["content_storage", "socialwave_backend"]
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8001",
      "type": "ephemeral",
      "replica": {
        "port": 8001,
        "subnet_type": "application"
      }
    },
    "ic": {
      "providers": ["https://ic0.app"],
      "type": "persistent"
    },
    "playground": {
      "providers": ["https://playground.dfinity.network"],
      "type": "persistent"
    }
  },
  "defaults": {
    "build": {
      "args": "",
      "packtool": ""
    },
    "replica": {
      "port": 8001,
      "subnet_type": "application"
    }
  },
  "output_env_file": ".env.local"
}
